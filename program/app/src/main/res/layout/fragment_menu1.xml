<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu1Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/banner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/box"
            android:gravity="center"
            android:text="                                            Wisata Pantai Lampung"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.573"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Daftar Kategori"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.109"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/home1"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/box"
            android:gravity="center"
            android:text="Menu 1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <TextView
            android:id="@+id/home2"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:background="@drawable/box"
            android:gravity="center"
            android:text="Menu 2"
            app:layout_constraintBottom_toBottomOf="@+id/home1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/home1"
            app:layout_constraintTop_toTopOf="@+id/home1" />

        <TextView
            android:id="@+id/home3"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/box"
            android:gravity="center"
            android:text="Menu 3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home1" />

        <TextView
            android:id="@+id/home4"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:background="@drawable/box"
            android:gravity="center"
            android:text="Menu 4"
            app:layout_constraintBottom_toBottomOf="@+id/home3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/home3"
            app:layout_constraintTop_toTopOf="@+id/home3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="106dp"
            android:layout_height="98dp"
            android:layout_marginTop="176dp"
            android:src="@drawable/tipala"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.203"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
